<!-- Ici une boucle afin d'afficher le addflash de symfony sur toutes les pages: success et warning -->
{% for label, messages in app.flashes(['success', 'warning']) %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}



