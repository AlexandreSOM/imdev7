{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    {#<style>#}
    {#    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }#}
    {#    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }#}
    {#</style>#}

    <div class="example-wrapper">


        <!-- Ici bloc sous le menu : Description et lien ajout -->
        <div class="row">
            <div class="card border-secondary" style="width: 66rem;">
                <div class="card-body">
                    <h1 class="card-title">Listes des gestionnaires  </h1>
                </div>
                <div class="card-header">
                    <div>
                        <a href="#" class="btn btn-secondary">#</a>
                        <a href="#" class="btn btn-secondary">#</a>
                    </div>
                </div>
            </div>

            <div class="card border-success add" style="width: 16rem;">
                <div class="card-body">
                    <h5>Ajouter un compte </h5>
                    <button  type="button" class="btn btn-success">
                        <a href="{{ path('app_register') }}" style="color:white">
                            <i class="fas fa-user-plus"></i>
                        </a>
                    </button>
                </div>
            </div>

        </div> <!--Fin row-->
        <!-- Fin bloc sous le menu -->


        <div class="card-body">
            <table class="table table-hover">
                <thead>
                <tr class="table-active">
                    <th scope="col">NOM</th>
                    <th scope="col">ROLES</th>
                    <th scope="col">MDP</th>
                    <th scope="col">MODIFICATION</th>
                </tr>
                </thead>
                <tbody class="table">


                {% for gestionnaire in gestionnaires %}
                <tr>
                    <th scope="row">{{ gestionnaire.username }}</th>
                    <td>{{ gestionnaire.roles[0] }}</td>
                    <td>{{ gestionnaire.password }}</td>
                    <td>
                        <button type="button" class="btn btn-outline-success"> <a href="{{ path('gestionnaire-modifier', {'gestionnaire': gestionnaire.id}) }}"> <i class="fas fa-user-edit"></i>  </a>  </button>
                        <a href="#"> {% include 'gestion_admin/gestion-modal/delete-gestion.html.twig' with {'name': 'modal-delete'} %} </a>
                    </td>
                    {% endfor %}

                </tr>
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}
